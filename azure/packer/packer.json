{
  "variables": {
    "client_id": "{{env `ARM_CLIENT_ID`}}",
    "client_secret": "{{env `ARM_CLIENT_SECRET`}}",
    "subscription_id": "{{env `ARM_SUBSCRIPTION_ID`}}",
    "arm_location": "{{env `ARM_LOCATION`}}",
    "image_resource_group": "{{env `IMAGE_RESOURCE_GROUP`}}"
  },
  "builders": [{
    "type": "azure-arm",
    "client_id": "{{user `client_id`}}",
    "client_secret": "{{user `client_secret`}}",
    "subscription_id": "{{user `subscription_id`}}",
    "os_type": "Linux",
    "image_publisher": "Canonical",
    "image_offer": "UbuntuServer",
    "image_sku": "18.04-LTS",
    "managed_image_resource_group_name": "{{user `image_resource_group`}}",
    "managed_image_name": "UbuntuImage-{{isotime | clean_image_name}}",
    "azure_tags": {
      "dept": "engineering",
      "task": "image deployment"
    },
    "location": "{{user `arm_location`}}",
    "vm_size": "Standard_D2s_v3"
  }],
  "provisioners": [{
      "type": "shell",
      "inline": [
        "sudo mkdir /ops",
        "sudo chmod 777 /ops"
      ]
    },
    {
      "type": "file",
      "source": "../../shared",
      "destination": "/ops"
    },
    {
      "type": "shell",
      "script": "../../shared/scripts/setup_new.sh"
    },
    {
      "type": "shell",
      "inline": [
        "sudo mkdir /home/ubuntu",
        "sudo chmod 777 /home/ubuntu",
        "sudo curl -L https://git.io/weave > /home/ubuntu/weave",
        "sudo chmod +x /home/ubuntu/weave",
        "sudo curl -L https://git.io/scope > /home/ubuntu/scope",
        "sudo chmod +x /home/ubuntu/scope"
      ]
    },
    {
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'",
      "inline": [
        "/usr/sbin/waagent -force -deprovision+user && export HISTSIZE=0 && sync"
      ],
      "inline_shebang": "/bin/sh -x",
      "type": "shell"
    }

  ],
  "post-processors": [{
    "type": "manifest",
    "output": "manifest.json",
    "strip_path": true
  }]

}